<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    <VerticalStackLayout 
        VerticalOptions="CenterAndExpand"
        Padding="10"
        Spacing="10">

        <Label 
            Text="Cálculo de Diária"
            FontFamily="Montserrat"
            FontSize="50"
            TextColor="{StaticResource Primary}" />

        <Frame Padding="10">
            <VerticalStackLayout VerticalOptions="CenterAndExpand">
                <Grid 
                    RowDefinitions="Auto, Auto" ColumnDefinitions="*, *, *">
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"/>

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"/>
                </Grid>

                <Frame Padding="10" Margin="10">
                    <VerticalStackLayout VerticalOptions="CenterAndExpand">
                        <Label Text="Escolha sua suíte"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="White"
                               />

                        <Picker x:Name="qrt_picker" Title="Selecione seu quarto" ItemDisplayBinding="{Binding Descricao}"/> 

                    </VerticalStackLayout>
                    
                </Frame>

                <Frame>
                    <StackLayout Orientation="Horizontal">
                        <VerticalStackLayout VerticalOptions="CenterAndExpand">

                            <Label Text="Período de estadia: "/>

                            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Padding="10" >
                                <Label Text="Check-In" VerticalTextAlignment="Center"/>
                                <DatePicker x:Name="dtpck_checkin" DateSelected="dtpck_checkin_DateSelected"  Format="dd/mm/YYYY"/>
                            </HorizontalStackLayout>
                        
                            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Padding="10">
                                <Label Text="Check-Out" VerticalTextAlignment="Center"/>
                                <DatePicker x:Name="dtpck_checkout" Format="dd/mm/YYYY"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </StackLayout>
                </Frame>

                <Button Text="Avançar" Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </Frame>

        <Frame Padding="10" Margin="10">
            <VerticalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>